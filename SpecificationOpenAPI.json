{
  "openapi": "3.0.3",
  "info": {
    "title": "Time Tracker API",
    "version": "1.0.0",
    "description": "API for tracking time on tasks."
  },
  "paths": {
    "/tasks/{task_id}/users/{user_id}/time": {
      "post": {
        "summary": "Record time spent by a user on a task.",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "integer"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Time added successfully!"
          },
          "400": {
            "description": "Invalid input! Please check your data."
          },
          "404": {
            "description": "Task or user not found!"
          },
          "500": {
            "description": "Server error!"
          }
        }
      },
      "get": {
        "summary": "Get time spend by a user on a task",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time retrieved successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_id": {
                      "type": "integer"
                    },
                    "user_id": {
                      "type": "integer"
                    },
                    "spend_time": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input! Please check your data."
          },
          "404": {
            "description": "Task or user not found!"
          },
          "500": {
            "description": "Server error!"
          }
        }
      },
      "delete": {
        "summary": "Deleting data about the time spent by the user on a task",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data deleted successfully!"
          },
          "400": {
            "description": "Invalid input! Please check your data."
          },
          "404": {
            "description": "Task or user not found!"
          },
          "500": {
            "description": "Server error!"
          }
        }
      }
    },
    "/users/{user_id}/time": {
      "delete": {
        "summary": "Delete all time tracking data for a user",
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Data deleted successfully!"
          },
          "400": {
            "description": "Invalid input! Please check your data."
          },
          "404": {
            "description": "User not found!"
          },
          "500": {
            "description": "Server error!"
          }
        }
      }
    },
    "/tasks/{task_id}/time": {
      "get": {
        "summary": "Get total time spend on a task by all users",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time retrieved successfully!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_id": {
                      "type": "integer"
                    },
                    "total_spend_time": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid input! Please check your data."
          },
          "404": {
            "description": "Task not found!"
          },
          "500": {
            "description": "Server error!"
          }
        }
      }
    },
    "/tasks/{task_id}/{estimated_time}": {
      "post": {
        "summary": "Record the estimated time for all users on the task.",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "estimated_time",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Time added successfully!"
          },
          "400": {
            "description": "Invalid input! Please check your data."
          },
          "404": {
            "description": "Task not found!"
          },
          "500": {
            "description": "Server error!"
          }
        }
      }
    }
  }
}